<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.title %></td>
        <td><%= picture.category %></td>
        <td><%= image_tag picture.image.url(:thumb) %></td>
        <td><%= link_to 'Show', [picture.category, picture]  %></td>
        <td><%= link_to 'Edit', edit_category_picture_path(picture.category, picture) %></td>
        <td><%= link_to 'Destroy', [picture.category, picture], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

